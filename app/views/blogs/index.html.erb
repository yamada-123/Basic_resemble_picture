
   <% if logged_in? %>
  <h1>ブログ一覧</h1>
  <%= notice %>
    <table>
  <tr>
    <th>投稿者</th>
    <th>タイトル</th>
    <th>内容</th>
    <th>ファイル</th>
  </tr>

  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.user.name %></td>
      <td><%= blog.title %></td>
      <td><%= blog.content %></td>
      <td><%= blog.image %></td>
      <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
      <td><%= link_to "ブログを編集する", edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' } %></td>
      <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
    <% end %>
    </table>

    <br>

    <%= link_to '新しくブログを投稿する', new_blog_path %>
    <% end %>

